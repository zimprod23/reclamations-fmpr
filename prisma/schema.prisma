generator client {
  provider = "prisma-client-js"
  engineType = "library"
  // output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// 1. User Model
// Covers both Students and Admins using the 'role' field
model User {
  id            String        @id @default(cuid())
  name          String?
  email         String        @unique
  passwordHash  String        @default("temp_hash_password") // Will be set properly during registration
  role          Role          @default(STUDENT)
  
  // --- Moroccan Academic Fields ---
  apogeeCode    String?       @unique // Code Apog√©e
  cin           String?       @unique // National ID
  cne           String?       @unique // Massar/CNE code
  studentCard   String?       // URL to the file stored in Vercel Blob
  
  // --- Tracking ---
  // This allows us to quickly see how many demands a student has made
  demands       Reclamation[] @relation("StudentDemands")
  handledDemands Reclamation[] @relation("AdminResponses")

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model Reclamation {
  id            String    @id @default(cuid())
  type        ReclamationType @default(OTHER)
  subject       String?
  description   String    @db.Text
  status        Status    @default(PENDING)
  
  // Admin Response
  adminResponse String?   @db.Text
  
  // New: Attachments (Supports files from student OR admin)
  attachments   Attachment[]

  studentId     String
  student       User      @relation("StudentDemands", fields: [studentId], references: [id])
  
  adminId       String?   
  admin         User?     @relation("AdminResponses", fields: [adminId], references: [id])

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  archivedAt  DateTime?
  phone       String?   // For follow-up calls if needed

  @@index([createdAt])
}

model Attachment {
  id            String      @id @default(cuid())
  url           String      // Vercel Blob URL
  name          String      // Original filename
  uploadedBy    String      // To distinguish Student vs Admin files
  reclamationId String
  reclamation   Reclamation @relation(fields: [reclamationId], references: [id])
}

enum ReclamationType {
  MAIL_PWD        // Forgot Password
  MAIL_PHONE      // Lost Phone / 2FA
  MAIL_ACTIVATE   // Account not active
  BOURSE_MINHATY  // Minhaty issues
  BOURSE_TRANSFER // Transfer issues
  CERTIFICATE     // Documents/Attestations
  EXAM_REVIEW     // Grades/Copies
  OTHER           // General/Ad
}

enum Role {
  STUDENT
  ADMIN
}


enum Status {
  PENDING
  IN_PROGRESS
  RESOLVED
  REJECTED
}